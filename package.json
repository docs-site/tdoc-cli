{
  "name": "@docs-site/tdoc-cli",
  "version": "1.3.1",
  "description": "sumu's document processing cli tool. This is a TypeScript project.",
  "main": "src/index.ts",
  "bin": {
    "tdoc": "./bin/tdoc-cli.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "bin:b": "tsc --project tsconfig.prod.json",
    "bin:c": "rimraf dist",
    "bin:v": "node ./dist/index.js -v",
    "bin:n": "node ./dist/index.js n demo -f",
    "bin:login": "node ./dist/index.js login",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "minify": "terser ./dist/index.js -o ./dist/output.min.js --config-file terser.config.json",
    "minify:t": "node ./dist/output.min.js -v",
    "eslint:fix": "eslint --fix -c eslint.config.mjs src",
    "lint:lint-staged": "lint-staged -c .husky/lintstagedrc.cjs",
    "prepare": "husky install",
    "cz": "git add . && git-cz",
    "release-major": "standard-version --no-verify --release-as major",
    "release-minor": "standard-version --no-verify --release-as minor",
    "release-patch": "standard-version --no-verify --release-as patch",
    "release-as": "standard-version --no-verify --release-as",
    "release-prerelease": "standard-version --prerelease"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/docs-site/tdoc-cli.git"
  },
  "keywords": [
    "TypeScript",
    "cli"
  ],
  "author": "sumu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/docs-site/tdoc-cli/issues"
  },
  "homepage": "https://github.com/docs-site/tdoc-cli#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@types/fs-extra": "^11.0.4",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^16.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "terser": "^5.43.0",
    "tsx": "^4.20.3",
    "typescript-eslint": "^8.34.1"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.5.3",
    "@types/node": "^24.0.3",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.0",
    "picocolors": "^1.1.1",
    "simple-git": "^3.28.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "git add CHANGELOG.md && npm run lint:lint-staged"
    }
  }
}
